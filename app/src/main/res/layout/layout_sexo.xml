<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/iphone_x_xs_11_pro__50"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    >

    <TextView
        android:id="@+id/Sexo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/sf_pro"
        android:text="Selecione su sexo"
        android:textColor="@color/Black"
        android:textSize="30sp"

        android:layout_marginTop="205dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="22dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="22dp" />

    <ImageView
        android:id="@+id/imageViewFlecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/icon_awesome_arrow_right"
        tools:layout_editor_absoluteX="243dp"
        tools:layout_editor_absoluteY="600dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="600dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="25dp"
         />

    <ImageView
        android:id="@+id/imageViewMujerUnsellect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/grupo_1091"
        app:layout_constraintTop_toBottomOf="@+id/Sexo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="120dp"
        />
    <ImageView
        android:id="@+id/imageViewHombreUnsellect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/grupo_1091"
        app:layout_constraintTop_toBottomOf="@+id/imageViewMujerUnsellect"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
         />
    <ImageView
        android:visibility="gone"
        android:id="@+id/imageViewOkMujer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/rectangulo_1714"
        app:layout_constraintTop_toBottomOf="@+id/Sexo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="120dp"
        />
    <ImageView
        android:visibility="gone"
        android:id="@+id/imageViewOkHombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/rectangulo_1714"
        app:layout_constraintTop_toBottomOf="@+id/imageViewMujerUnsellect"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        />
    <ImageView
        android:visibility="gone"
        android:id="@+id/imageViewMujerNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/rectangulo_1715"
        app:layout_constraintTop_toBottomOf="@+id/Sexo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="120dp"
       />
    <ImageView
        android:visibility="gone"
        android:id="@+id/imageViewMHombreNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/rectangulo_1715"
        app:layout_constraintTop_toBottomOf="@+id/imageViewMujerUnsellect"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"

        />

    <TextView
        android:id="@+id/textViewMujer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mujer"
        android:fontFamily="@font/sf_pro"
        android:textColor="@color/White"
        android:textSize="28sp"
        app:layout_constraintTop_toTopOf="@+id/imageViewMujerUnsellect"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewMujerUnsellect"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <TextView
        android:id="@+id/textViewHombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hombre"
        android:fontFamily="@font/sf_pro"
        android:textColor="@color/White"
        android:textSize="28sp"
        app:layout_constraintTop_toTopOf="@+id/imageViewHombreUnsellect"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewHombreUnsellect"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    >
</androidx.constraintlayout.widget.ConstraintLayout>