<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/iphone_x_xs_11_pro__50"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <TextView
        android:id="@+id/FraseMotivadora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/sf_pro"
        android:text="INGRESE UNA FOTO MOTIVADORA"
        android:textColor="@color/Black"
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_marginTop="205dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="22dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="22dp"
        android:gravity="center_horizontal" />
    <ImageView
        android:id="@+id/imageViewFlechaIzqFot"
        android:layout_width="35dp"
        android:layout_height="42dp"
        android:layout_marginTop="576dp"
        android:layout_marginLeft="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_awesome_arrow_left"
        android:onClick="onClick"
        />

    <Button

        android:id="@+id/btnFlechaDerFoto"
        android:layout_width="35dp"
        android:layout_height="42dp"
        android:layout_marginTop="576dp"
        android:layout_marginRight="30dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="onClick"
        android:alpha="0"
        />


    <ImageView
        android:background="@color/White"
        android:layout_width="35dp"
        android:layout_height="42dp"
        android:layout_marginTop="576dp"
        android:layout_marginRight="30dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/icon_awesome_arrow_right"
        />

    <ImageButton
        android:id="@+id/imageButtonFoto"
        android:layout_width="135dp"
        android:layout_height="127dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/perfil"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/FraseMotivadora"
        app:srcCompat="@drawable/nopath___copia"
        android:onClick="onClick"/>
    <ImageButton
        android:id="@+id/imageButtonMas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/grupo_1092"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="450dp"
        tools:layout_editor_absoluteY="450dp"
        android:onClick="onClick"
        />

</androidx.constraintlayout.widget.ConstraintLayout>