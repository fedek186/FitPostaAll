<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/iphone_x_xs_11_pro__31"
  >

    <ImageView
        android:id="@+id/imageViewLineas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/textViewBien"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/grupo_1086"
        android:layout_marginTop="80dp"
        />
    <Button
        android:id="@+id/imageViewLogin"
        android:layout_width="310dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/imageViewLineas"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Login"
        android:textAllCaps="false"
        android:fontFamily="@font/sf_pro"
        android:background="@drawable/login"
        android:textSize="20dp"
        android:layout_marginTop="175dp"
        android:onClick="onClick"
        />
    <Button
        android:id="@+id/imageViewRegister"
        android:layout_width="310dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/imageViewLogin"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="65dp"
        android:onClick="onClick"
        android:text="Account? Register now"
        android:textAllCaps="false"
        android:fontFamily="@font/sf_pro"
        android:background="@drawable/register"
        android:textSize="20dp"

        />
    <TextView
        android:id="@+id/txtForgotPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/sf_pro"
        android:text="Forgot Password?"
        android:textColor="@color/DGrey"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewLogin"
        tools:layout_editor_absoluteX="39dp"
        tools:layout_editor_absoluteY="680dp" />
    <TextView
        android:id="@+id/textViewBien"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/sf_pro"
        android:text="Bienvenido a"
        android:textColor="@color/Black"
        android:textSize="38dp"
        app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="200dp"
        />
    <TextView
        android:id="@+id/textViewFit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="27dp"
        android:fontFamily="@font/sf_pro"
        android:text="Fit4All"
        android:textColor="@color/Red"
        android:textSize="38dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="200dp"
        />
    <EditText
        android:id="@+id/edxMail1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Mail"
        android:fontFamily="@font/sf_pro"
        android:textColorHint="@color/Grey"
        android:textSize="20dp"
        android:layout_marginTop="36dp"
        android:layout_marginRight="260dp"
        app:layout_constraintTop_toBottomOf="@id/imageViewLineas"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        ></EditText>
    <EditText
        android:id="@+id/edxPass1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:fontFamily="@font/sf_pro"
        android:textColor="@color/Grey"
        android:textSize="20dp"
        android:layout_marginTop="115dp"
        android:layout_marginRight="220dp"
        app:layout_constraintTop_toBottomOf="@id/imageViewLineas"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        ></EditText>


</androidx.constraintlayout.widget.ConstraintLayout>